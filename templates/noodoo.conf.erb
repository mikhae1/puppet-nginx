upstream noodoo {
    server 127.0.0.1:3000;
}

log_format timed '$remote_addr - $remote_user [$time_local] '
                 '"$request" $status $body_bytes_sent $request_time '
                 '"$http_referer" "$http_user_agent"';

server {
    listen      80;
    server_name <%= @fqdn %>;

    client_max_body_size 100m;

    access_log /var/log/nginx/noodoo.access.log timed;
    error_log /var/log/nginx/noodoo.error.log debug;

    error_page 404 /404.html;
    error_page 403 /403.html;
    error_page 500 /500.html;
    error_page 503 /maintenance.html;

    location =/maintenance.html {
        root <%= @www_root_path %>/current/public;
    }

    location ~ ^/(.*).html {
        root <%= @www_root_path %>/current/public;
    }

    location =/check {
        root <%= @www_root_path %>/current/public;
        index index.html;
    }

    location / {
        if (-f <%= @www_root_path %>/current/public/maintenance.html) {
            return 503;
        }

        proxy_intercept_errors on;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;

        proxy_pass http://noodoo/;
        proxy_redirect off;
    }

    location =/ {
        if (-f <%= @www_root_path %>/maintenance.html) {
            return 503;
        }
        root <%= @www_root_path %>/current/public;
        index index.html;
    }

    location ~ ^/([^/]+)/(images|css|fonts|documents|uploads)/(.*) {
        alias <%= @www_root_path %>/current/organizers/$1/public/$2/$3;
    }


    location ~ ^/(images/|css/|fonts/|noodoo.js){
        root <%= @www_root_path %>/current/public;
    }

    location /nginx_stats {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
        deny all;
    }
}